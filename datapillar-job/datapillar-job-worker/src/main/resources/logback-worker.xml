<?xml version="1.0" encoding="UTF-8"?>
<!--
  Datapillar Job Worker 日志配置
  @author SunnyX6
  @date 2025-12-14
-->
<configuration scan="true" scanPeriod="30 seconds">

    <!-- 从 Spring 配置读取日志路径 -->
    <springProperty scope="context" name="LOG_HOME" source="datapillar.job.log.base-path" defaultValue="./logs/job"/>
    <springProperty scope="context" name="LOG_RETENTION_DAYS" source="datapillar.job.log.retention-days" defaultValue="7"/>

    <!-- ==================== 应用日志 ==================== -->

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 应用日志文件 -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/../app/worker.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/../app/worker.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${LOG_RETENTION_DAYS}</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ==================== 任务执行日志 ==================== -->

    <!--
      SiftingAppender: 根据 MDC 中的 jobLogFile 动态创建日志文件
      文件路径: {LOG_HOME}/{namespaceId}/{jobRunId}_{retryCount}.log
    -->
    <appender name="JOB_LOG" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>jobLogFile</key>
            <defaultValue>unknown/0_0</defaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${jobLogFile}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${LOG_HOME}/${jobLogFile}.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!-- 按天滚动，保留指定天数 -->
                    <fileNamePattern>${LOG_HOME}/${jobLogFile}.%d{yyyy-MM-dd}.log</fileNamePattern>
                    <maxHistory>${LOG_RETENTION_DAYS}</maxHistory>
                    <cleanHistoryOnStart>true</cleanHistoryOnStart>
                </rollingPolicy>
                <encoder>
                    <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </sift>
    </appender>

    <!-- 任务日志 Logger（不传播到 root） -->
    <logger name="JOB_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="JOB_LOG"/>
    </logger>

    <!-- ==================== 第三方日志级别 ==================== -->

    <logger name="org.apache.pekko" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.mybatis" level="INFO"/>

    <!-- ==================== Root Logger ==================== -->

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
    </root>

</configuration>
