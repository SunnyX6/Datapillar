<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunny.datapillar.studio.module.features.mapper.FeatureObjectCategoryMapper">

    <select id="selectByCode" resultType="com.sunny.datapillar.studio.module.features.entity.FeatureObjectCategory">
        SELECT *
        FROM feature_object_categories
        WHERE code = #{code}
        LIMIT 1
    </select>

    <select id="selectByName" resultType="com.sunny.datapillar.studio.module.features.entity.FeatureObjectCategory">
        SELECT *
        FROM feature_object_categories
        WHERE name = #{name}
        LIMIT 1
    </select>

    <select id="selectByCategoryId" resultType="com.sunny.datapillar.studio.module.features.entity.FeatureObjectCategory">
        SELECT *
        FROM feature_object_categories
        WHERE id = #{id}
        LIMIT 1
    </select>

    <select id="selectAll" resultType="com.sunny.datapillar.studio.module.features.entity.FeatureObjectCategory">
        SELECT *
        FROM feature_object_categories
        ORDER BY sort ASC, id ASC
    </select>

</mapper>
